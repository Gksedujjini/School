@{
   // Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    <link href="Content/all.min.css" rel="stylesheet" type="text/css">
    <link href="Content/sb-admin.css" rel="stylesheet">
    <title>AddSubjects</title>
    <style>
        #cntnr {
            background-color: #ebebe0;
            width: 60%;
        }
        .form-control {
                border-radius: 20px;
                background-color: white;
            }
        #div1 {
            background-color: white;
        }

        #input1 {
            border-radius: 10px;
            float: right;
            background-color: blue;
            color: white;
            min-width: 50px;
            width: 80px;
            margin-top: 15px;
        }

        #input2 {
            border-radius: 10px;
            float: right;
            background-color: red;
            color: white;
            min-width: 50px;
            width: 80px;
            margin-top: 5px;
        }

        #upload-data {
            margin-right: auto;
            float: right;
            font-size: 55px;
            color: green;
            width: 50px;
            margin-top: -8px;
        }

        #addDiv {
            width: 58px;
            float: right;
            margin-top: 10px;
            border-radius: 5px;
            margin-right: -5px;
            background-color: green;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5" id="cntnr">
        <div class="row mt-2">
            <div class="col-md-6">
                <div class="col">
                    <select class="form-control">
                        <option>Class</option>
                        <option>class2</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col">
                    <select class="form-control">
                        <option>Section</option>
                        <option>class2</option>
                    </select>
                </div>
            </div>
        </div>
        <label class="ml-4 mt-2" style="">Subject Lists</label><br />
        <div class="row mt-3 ml-3 mr-4" style="background-color:white; border-radius:15px;">
            <div class="col-md-6" style="background-color:white;border-radius:15px;">
                <label style="font-size:13px;">Subject</label><br /><label>Science</label><br />
                <label style="font-size:13px;">Type</label><br /><label>Theoretical</label>
            </div>
            <div class="col-md-5 mt-1" id="div1">
                <div class="row">
                    <div class="col ml-2">
                        <input type="submit" class="form-control" id="input1" name="submit" value="Edit">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col ml-2 mb-2">
                        <input type="submit" id="input2" class="form-control" name="submit" value="Delete">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="@Url.Action("AddSubjectView","Admin")">
                    <i class="fa fa-plus-circle" id="upload-data"></i>

                    <div id="addDiv"><label class="ml-2">Add</label></div>
                </a>
            </div>
            <br />
        </div>
    </div>
</body>
</html>
