@model Edujinni.Models.StudentModel
@{
// Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stundent Information</title>
</head>
<body>
    <div class="row ml-1 mt-4">
        <h2>Generic Information</h2>
    </div>
    <div class="row mt-4">
        <div class="col-md-2 ml-3 mt-4">
            @* FOR VIEWING IMAGE *@
            <img src="~/Images/test/ic_launcher.png" class="img-responsive img-rounded" />
        </div>
        <div class="col-md-3 ml-3">
            <div class="row">
                <label>First Name</label>
                @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control", @id = "fn" })
            </div>
            <div class="row">
                <label>Class</label>
                @Html.TextBoxFor(Model => Model.class1, new { @class = "form-control", @id = "fn" })
            </div>
            <div class="row">
                <label>Student Id</label>
                @Html.TextBoxFor(Model => Model.StudentId, new { @class = "form-control", @id = "fn" })
            </div>
        </div>
        @* SECOND COLUMN AFTER PROFILE IMAGE *@
        <div class="col-md-3 ml-3">
            <div class="row">
                <label>Last Name</label>
                @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control", @id = "fn" })
            </div>
            <div class="row">
                <label>Section</label>
                @Html.TextBoxFor(Model => Model.section, new { @class = "form-control", @id = "fn" })
            </div>
            <div class="row">
                <label>Date of Birth</label>
                @Html.TextBoxFor(Model => Model.Dob, new { @class = "form-control", @id = "fn" })
            </div>
        </div>
        @* THIRD COLUMN AFTER PROFILE IMAGE *@
        <div class="col-md-3 ml-3">
            <div class="row">
                <label>Gender</label>
                @Html.TextBoxFor(Model => Model.Gender, new { @class = "form-control", @id = "fn" })
            </div>
            <div class="row">
                <label>Roll No</label>
                @Html.TextBoxFor(Model => Model.RoolNo, new { @class = "form-control", @id = "fn" })
            </div>
        </div>
    </div>
    <br />
    <hr />
    @* HERE GOES THE ACADEMIC INFORMATION *@
    <div class="row mt-4 ml-2">
        <h2>Family Information</h2>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <label>Father Name</label>
            @Html.TextBoxFor(Model => Model.FatherName, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Father Mobile No</label>
            @Html.TextBoxFor(Model => Model.FatherMobileNo, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Father Occupation</label>
            @Html.TextBoxFor(Model => Model.FatherOccupation, new { @class = "form-control", @id = "fn" })
        </div>
    </div>
    @* SECOND ROW OF ACADEMIC INFORMATION GOES HERE *@
    <div class="row mt-4">
        <div class="col-md-4">
            <label>Mother Name</label>
            @Html.TextBoxFor(Model => Model.MotherName, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Mother Mobile No</label>
            @Html.TextBoxFor(Model => Model.MotherMobileNo, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Mother Occupation</label>
            @Html.TextBoxFor(Model => Model.MotherOccupation, new { @class = "form-control", @id = "fn" })
        </div>
    </div>
    @* THIRD ROW *@
    <div class="row mt-4">
        <div class="col-md-4">
            <label>Sibbling Name</label>
            @Html.TextBoxFor(Model => Model.SbilingName, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Age</label>
            @Html.TextBoxFor(Model => Model.Age, new { @class = "form-control", @id = "fn" })
        </div>
    </div>
    <br />
    <hr />
    @* ADDRESS SECTION GOES HERE *@
    <div class="row mt-4 ml-2">
        <h2>Address</h2>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <label>Flat No</label>
            @Html.TextBoxFor(Model => Model.FlatNo, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Building Name</label>
            @Html.TextBoxFor(Model => Model.BulidingName, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Street-1</label>
            @Html.TextBoxFor(Model => Model.street1, new { @class = "form-control", @id = "fn" })
        </div>
    </div>
    @* SECOND ROW OF ADDRESS SECTION *@
    <div class="row mt-4">
        <div class="col-md-4">
            <label>Street-2</label>
            @Html.TextBoxFor(Model => Model.street2, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Area</label>
            @Html.TextBoxFor(Model => Model.Area, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>City</label>
            @Html.TextBoxFor(Model => Model.City, new { @class = "form-control", @id = "fn" })
        </div>
    </div>
    @* THIRD ROW OF ADDRESS SECTION  *@
    <div class="row mt-4">
        <div class="col-md-4">
            <label>State</label>
            @Html.TextBoxFor(Model => Model.State, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-4">
            <label>Code</label>
            @Html.TextBoxFor(Model => Model.AreaCode, new { @class = "form-control", @id = "fn" })
        </div>
        <div class="col-md-2 col-sm-12 col-xs-12 mt-4">
            <button type="submit" onclick="location.href='@Url.Action("EditStudent","Admin")'" class="btn" style="width:110px; border-radius:5px; height:35px;  background-color:#5A5C59; color:white;">Edit</button>
        </div>
        <div class="col-md-2 col-sm-12 col-xs-12 mt-4">
            <button type="button" class="btn btn-danger" style="width:110px; border-radius:5px; height:35px;">Delete</button>
        </div>
    </div>
</body>
</html>
