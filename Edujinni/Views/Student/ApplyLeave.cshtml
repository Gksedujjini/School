@model Edujinni.Models.Student.LeaveModel
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    <link href="Content/all.min.css" rel="stylesheet" type="text/css">
    <link href="Content/sb-admin.css" rel="stylesheet">
    <title>Apply Leave</title>
    <style>
        .form-control {
            border-radius: 15px;
            background-color: white;
            height: 35px;
            font-size: 15px;
        }

        #btnsave {
            background-color: forestgreen;
            color: white;
        }

        #colcontainer {
            background-color: #f2f2f2;
            width: 100%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="row ml-0 mr-2 mt-5" style="width:80%;">
        <div class="col-md-12 col-md-offset-0 mr-1 mb-3" id="colcontainer">
            <br />
            <div class="row mt-3 justify-content-center">
                <div class="col-md-6 mt-2">
                    <div class="col">
                            <input type="checkbox" class="form-check-input" id="principal">
                            <label class="form-check-label ml-5 mt-1" for="principal">To Principal</label>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <input type="checkbox" class="form-check-input" id="classteacher">
                        <label class="form-check-label ml-5 mt-1" for="classteacher">To Class Teacher</label>
                    </div>
                </div>
            </div>
            <div class="row mt-4 justify-content-center">
                <label>Calender will be here</label>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextAreaFor(Model => Model.LeaveMessage, new { @class = "form-control", @placeholder = "Add Request message here" })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        <input type="button" value="Save" class="form-control" id="btnsave" />
                    </div>
                </div>
            </div>
            <br /><br /><br />
        </div>
    </div>
</body>
</html>
