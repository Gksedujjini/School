@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Marks</title>
    <style>
        #colcontainer {
            background-color: #f2f2f2;
            width: 100%;
            border-radius: 10px;
        }

        #cntnr {
            background-color: #f2f2f2;
            border-radius: 5px;
            width: 80%;
        }

        #rank {
            font-size: 15px;
            color: black;
            margin-top: 0px;
        }
        #ranktextboxmiddle{ color:green; font-size: 35px; color: green; width:100px; height:50px; text-align:center; border:none; margin-top:10px;}
        #rankbox {
            background-color: white;
            width: 100px;
            height: 100px;
            border-radius: 8px;
        }
        #rankboxtop {
            background-color: white;
            width: 150px;
            height: 100px;
            border-radius: 8px;
        }
        #ranktextbox{ color:green; font-size: 35px; color: green; width:100px; height:50px; text-align:center; border:none; margin-top:10px;}
        #labelstd {
            font-size: 12px;
            color: gray;
        }
        #tabletextbox{ background-color:green; color:white; font-size:20px;width:65px; border:none;}
        #tabletextbox1{ background-color:red; color:white; font-size:20px;width:65px; border:none;}
    </style>
</head>
<body>
    <div class="container mt-5" style="width:100%">
        <div class="row justify-content-center" style="width:100%;">
            <div class="col-md-10 mb-3" id="colcontainer">
                <div class="row justify-content-start mt-3 mb-3">
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <div class="text-center" id="rankboxtop">
                                <input type="text" id="ranktextbox" value="87.7"/>
                                <p id="rank">Overall %</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <div class="text-center" id="rankboxtop">
                                <input type="text" id="ranktextbox" value="A" />
                                <p id="rank">Overall Grade</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-md-10 mt-2">
                        <div class="col">
                            <select name="type" class="form-control" style="border-radius:10px;">
                                <option>Select Unit Text-1</option>
                                <option>Unit 2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <label id="labelstd">Student Id</label><br />
                            <input type="text" value="54545545" />
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <label id="labelstd">Type of Exam</label><br />
                            <input type="text" value="Unit Text-3" />
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3" style="width:92%;">
                    <div class="col-md-4 mt-2">
                        <div class="col" style="">
                            <div class="text-center" id="rankbox">
                                <input type="text" id="ranktextboxmiddle" value="5" />
                                <p id="rank">Rank</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-2">
                        <div class="col" style="">
                            <div class="text-center" id="rankbox">
                                <input type="text" id="ranktextboxmiddle" value="87" />
                                <p id="rank">%</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-2">
                        <div class="col" style="">
                            <div class="text-center" id="rankbox">
                                <input type="text" id="ranktextboxmiddle" value="A" />
                                <p id="rank">Grade</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-md-12">
                        <div class="col" style="width:100%;">

                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-md-10">
                        <div class="col">
                            <table class="table table-borderless" style="width:100%">
                                <thead>
                                    <tr class="" style="color:white; background-color:blue;">
                                        <td style="width:60%;">Subject</td>
                                        <td style="width:40%;">Marks Obtained</td>
                                    </tr>
                                </thead>
                                <tbody>
                                        @*<tr class="" style="color:black; background-color:#e6ffff;">
                                            <td style="width:60%;">Social</td>
                                            <td style="width:40%;"><span style="color:green">50</span>/50</td>
                                        </tr>
                                        <tr class="" style="color:black; background-color:#ffe6ff;">
                                            <td style="width:60%;">English</td>
                                            <td style="width:40%;"><span style="color:red">10</span>/50</td>
                                        </tr>*@
                                        <tr class="" style="color:white; background-color:green;">
                                            <th style="width:60%;">Obtained</th>
                                            <th style="width:40%;"><input type="text" id="tabletextbox" value="180" /></th>
                                        </tr>
                                        <tr class="" style="color:white; background-color:red;">
                                            <th style="width:60%;">Total</th>
                                            <th style="width:40%;"><input type="text" id="tabletextbox1" value="600" /></th>
                                        </tr>
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-md-5 mt-2">
                        <div class="col">
                            Pi Chart
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-md-5 mt-2">
                        <div class="col">
                            <input type="button" onclick="location.href = '/Student/CompareMarks'" name="type" class="form-control" value="Compare" style="border-radius:10px; color:white;background-color:black;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
