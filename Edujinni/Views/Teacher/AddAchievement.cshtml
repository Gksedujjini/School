@model Edujinni.Models.Achievements
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Add Achievement</title>
    <style>
        #cntrachvmnt{background-color: #f2f2f2; border-radius: 5px; width: 90%;}
        .form-control{
                border-radius:20px;
                background-color:white;
            }
            #btnsave{
                border-radius:15px;
                background-color: #01BE66;
                color: white;
                margin-bottom:10px;
            }
    </style>
</head>
<body>
    <div class="container mt-5 mb-3" id="cntrachvmnt">
        <div class="row mt-3 justify-content-center">
            <br />
            <label class="mt-1">Add Achievements</label>
            </div>
            <div class="row mt-3 justify-content-center">
                <div class="col-md-12 mt-3">
                    <div class="col">
                        @Html.TextBoxFor(Model => Model.AchievementDate, new { @class = "form-control", @placeholder = "Achievement Date" })
                        <span class="glyphicon glyphicon-calendar form-control-feedback mr-3" style="color:gray;"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3 justify-content-center">
                <div class="col-md-12 mt-3">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Select Class</option>
                            <option>Class1</option>
                            <option>Class2</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-3 justify-content-center">
                <div class="col-md-12 mt-3">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Select Section</option>
                            <option>Section1</option>
                            <option>Section2</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-3 justify-content-center">
                <div class="col-md-12 mt-3">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Select Student List</option>
                            <option>Student1</option>
                            <option>Student2</option>
                        </select>
                    </div>
                </div>
            </div>
        <div class="row mt-3 justify-content-center">
            <div class="col-md-12 mt-3">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.AchievementType, new { @class = "form-control", @placeholder = "Achievement Type" })
                </div>
            </div>
        </div>
        <div class="row mt-3 justify-content-center">
            <div class="col-md-12 mt-3">
                <div class="col">
                    @Html.TextAreaFor(Model => Model.Comment, new { @class = "form-control", @placeholder = "Suresh won 1st price in Football" })
                </div>
            </div>
        </div>
        <div class="row mt-3 justify-content-center">
            <div class="col-md-12 mt-3">
                <div class="col">
                    <input type="button" id="btnsave" value="Save" class="form-control">
                </div>
            </div>
        </div>
        </div>
</body>
</html>
