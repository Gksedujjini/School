@model Edujinni.Models.AssignmentModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Add Assignment</title>
    <style>
        .form-control {
            border-radius: 20px;
            background-color: white;
        }
        #cntnr {
            background-color: #f2f2f2;
            border-radius: 5px;
            width: 60%;
        }
        #btnsave{background-color:blue; border-radius:20px; color:white;}
    </style>
</head>
<body>
    <div class="container mt-5" id="cntnr">
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-6 mt-2">
                <div class="col">
                    <select name="Class" class="form-control">
                        <option>Class</option>
                        <option>Section</option>
                        <option>Section</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <div class="col">
                    <select name="Section" class="form-control">
                        <option>Section</option>
                        <option>Section</option>
                        <option>Section</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row justify-content-start mt-3">
            <div class="col-md-6 mt-2">
                <div class="col">
                    <select name="Subject" class="form-control">
                        <option>Subject</option>
                        <option>Section</option>
                        <option>Section</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.Topic, new { @class = "form-control", @placeholder = "Enter Topic" })
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-6 mt-2">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.DateFrom, new { @class = "form-control", @placeholder = "From Date" })
                    <span class="glyphicon glyphicon-calendar form-control-feedback mr-5"></span>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.DateTo, new { @class = "form-control", @placeholder = "To Date" })
                    <span class="glyphicon glyphicon-calendar form-control-feedback mr-5"></span>
                </div>
            </div>
            </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-12 mt-2">
                <div class="col">
                    @Html.TextAreaFor(Model => Model.AssignmentText, new { @class = "form-control", @placeholder = "Assignment related text enters here..." })
                </div>
            </div>
        </div>
            <div class="row justify-content-center mt-3 mb-3">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        <input type="submit" value="Add Assignment" class="form-control" id="btnsave" />
                    </div>
                </div>
            </div>
        </div>
</body>
</html>
