@model Edujinni.Models.DiaryModel
@{
Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    <link href="Content/all.min.css" rel="stylesheet" type="text/css">
    <link href="Content/sb-admin.css" rel="stylesheet">
    <title>Add Diary</title>
    <style>
        .form-control {
            border-radius: 15px;
            background-color: white;
            height: 35px;
            font-size: 15px;
        }
        #btnsave {
            background-color: forestgreen;
            color: white;
        }
        #colcontainer{background-color: #f2f2f2; width:100%; border-radius:10px;}
    </style>
</head>
<body>
    <div class="row ml-0 mr-2 mt-5" style="width:80%;">
        <div class="col-md-12 col-md-offset-0 mr-1 mb-3" id="colcontainer">
            <br />
            <center><b>Add Work</b></center>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Select Class</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Section" class="form-control">
                            <option>Section</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextBoxFor(Model => Model.Date, new { @type="date", @class = "form-control", @placeholder = "Select Date" })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Subject" class="form-control">
                            <option>Subject</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Unit" class="form-control">
                            <option>Unit</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextAreaFor(Model => Model.ClassRelatedTest, new { @class = "form-control", @placeholder = "Today class related test..." })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextAreaFor(Model => Model.HomeWork, new { @class = "form-control", @placeholder = "Enter homework here" })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        <input type="submit" value="Save" class="form-control" id="btnsave" />
                    </div>
                </div>
            </div>
            <br /><br /><br />
        </div>
    </div>
</body>
</html>
