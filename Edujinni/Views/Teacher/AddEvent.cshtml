@model Edujinni.Models.EventsModel
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Add Event</title>
    <script>
            $(document).ready(function () {
                $('#upload-data1').click(function () {
                    $('#getfile1').trigger('click');
                    return false;
                });
                $('#upload-data1').mouseover(function () {
                    $('#upload-data1').css('color', 'blue');
                });
                $('#upload-data1').mouseout(function () {
                    $('#upload-data1').css('color', 'black');
                });
            });
    </script>
    <style>
        .form-control {
            border-radius: 20px;
            background-color: white;
        }
        #cntnr {
            background-color: #f2f2f2;
            border-radius: 5px;
            width: 90%;
        }
         #upload-data1 {
                font-size: 1.6em;
            }
            #image1 {
                background-color: none;
                width: 130px;
                height: 100px;
                text-align: right;
                border-radius: 10px;
            }
            #upload-data1 {
                color: black;
                margin-left:139px;
                margin-top:-4px;
            }
        #btnsave {
            background-color: forestgreen;
            border-radius: 20px;
            color: white;
        }
        #imgdiv{ width: 130px;
                 background-color:white;
                height: 100px;
                text-align: right;
                border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5 mb-3" id="cntnr">
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-8 mt-2">
                <div class="col justify-content-center">
                    <center><div class="align-self-center" id="imgdiv">
                       <img src="" alt="Event Image" id="image1" /> 
                    </div></center>
                    <center><i class="fa fa-plus-circle upload-data" id="upload-data1"></i></center>
                    @*<center><i class="fa fa-user fa-5x" style="color:blue;"></i></center>*@
                    <input class="" id="getfile1" style="display: none;" type="file" accept="image/*"
                           onchange="document.getElementById('image1').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-8 mt-2">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.EventName, new { @class = "form-control", @placeholder = "Select Event Date" })
                    <span class="glyphicon glyphicon-calendar form-control-feedback mr-4" style="color:gray;"></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-8 mt-2">
                <div class="col">
                    @Html.TextBoxFor(Model => Model.EventDate, new { @class = "form-control", @placeholder = "Enter Event Name" })
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-8 mt-2">
                <div class="col">
                    @Html.TextAreaFor(Model => Model.EventDescription, new { @class = "form-control", @placeholder = "Assignment related text enters here..." })
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-8 mt-2">
                <div class="col">
                    <input type="submit" value="Save" class="form-control" id="btnsave" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
