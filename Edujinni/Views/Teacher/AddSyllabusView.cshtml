@model Edujinni.Models.SyllabusModel
@{
Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
    <link href="Content/all.min.css" rel="stylesheet" type="text/css">
    <link href="Content/sb-admin.css" rel="stylesheet">
    <title>AddSubjects</title>
    <style>
        .form-control {
            border-radius: 15px;
            background-color: white;
            height: 35px;
            font-size: 15px;
        }
        #btnsave{ background-color:forestgreen; color:white;}
    </style>
</head>
<body>
    <div class="row ml-0 mr-2 mt-3" style="width:80%;">
        <div class="col-md-12 col-md-offset-0 mr-1 mb-3" style="background-color: #f2f2f2; width:100%; border-radius:10px;">
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Class</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Unit" class="form-control">
                            <option>Unit</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        @Html.TextBoxFor(Model => Model.Unit, new { @class = "form-control", @placeholder = "Unit" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        @Html.TextBoxFor(Model => Model.SubUnit, new { @class = "form-control", @placeholder = "Sub-Unit" })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextAreaFor(Model => Model.Topics, new { @class = "form-control", @placeholder = "Enter the topic name" })
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        <input type="submit" value="Save" class="form-control" id="btnsave"/>
                    </div>
                </div>
            </div>
            <br /><br /><br />
        </div>
    </div>
</body>
</html>
