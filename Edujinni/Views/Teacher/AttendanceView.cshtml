
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Attendance View</title>
        <style>
            .form-control {
            border-radius: 20px;
            background-color: white;
        }
        #colcontainer{background-color: #f2f2f2; width:100%; border-radius:10px;}
            #search {
                background-color: white;
                border: none;
                border-radius: 20px;
                margin: 0px 0;
                outline: none;
                padding: 8px;
                box-sizing: border-box;
                transition: 0.3s;
            }
            .inputWithIcon #search {
                padding-left: 40px;
            }
            .inputWithIcon {
                position: relative;
            }
                .inputWithIcon i {
                    position: absolute;
                    left: 0;
                    top: 1px;
                    padding: 9px 15px;
                    color: black;
                    transition: 0.3s;
                }
                .inputWithIcon.inputIconBg i {
                    background-color: #aaa;
                    color: black;
                    padding: 9px 4px;
                    border-radius: 4px 0 0 4px;
                }
                #editbtn {
            background-color: blue;
            color: white;
            border-radius: 10px;
            min-width: 80px;
            max-width: 200px;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="width:100%">
        <div class="row" style="width:87%;">
            <div class="col-md-12 mb-3" id="colcontainer">
                <div class="row justify-content-center mt-3 mb-3">
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <select class="form-control">
                                <option>class1</option>
                                <option>class2</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mt-2">
                        <div class="col">
                            <select class="form-control">
                                <option>class1</option>
                                <option>class2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-md-12">
                        <div class="col" style="width:100%;">
                            <div class="inputWithIcon">
                                <input type="text" class="form-control col-12" id="search" placeholder="Search Student">
                                <i class="fa fa-search fa-lg fa-fw" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-md-12">
                        <div class="col">
                            <table class="table table-borderless table-responsive">
                                <thead>
                                    <tr class="table-active">
                                        <th scope="col" width="17%">Roll No</th>
                                        <th scope="col" width="66%">Student Name</th>
                                        <th scope="col" width="17%">Percentage</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row mt-3 justify-content-end">
                    <div class="col-md-6 mt-2 text-left">
                        <div class="col">
                            <input type="button" onclick="location.href='/Teacher/AttendanceDetails'" value="View" id="editbtn" class="form-control" />
                        </div>
                    </div>
                </div><br />
            </div>
        </div>
       </div>
</body>
</html>
