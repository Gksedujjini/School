    <title>AttendanceView</title>
        <style>
            .form-control {
                border-radius: 20px;
                background-color: #f2f2f2;
            }
            #search {
                background-color: #f2f2f2;
                border: none;
                border-radius: 20px;
                margin: 0px 0;
                outline: none;
                padding: 8px;
                box-sizing: border-box;
                transition: 0.3s;
            }
            .inputWithIcon #search {
                padding-left: 40px;
            }
            .inputWithIcon {
                position: relative;
            }
                .inputWithIcon i {
                    position: absolute;
                    left: 0;
                    top: 1px;
                    padding: 9px 15px;
                    color: black;
                    transition: 0.3s;
                }
                .inputWithIcon.inputIconBg i {
                    background-color: #aaa;
                    color: black;
                    padding: 9px 4px;
                    border-radius: 4px 0 0 4px;
                }
    </style>
</head>
<body>
    <div class="container mt-5" style="width:65%">
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-4 mt-2">
                <div class="col">
                    <select class="form-control">
                        <option>class1</option>
                        <option>class2</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4 mt-2">
                <div class="col">
                    <select class="form-control">
                        <option>class1</option>
                        <option>class2</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-8">
            <div class="col" style="width:100%;">
                <div class="inputWithIcon">
                    <input type="text" class="form-control col-12" id="search" placeholder="Search Student">
                    <i class="fa fa-search fa-lg fa-fw" aria-hidden="true"></i>
                </div>
            </div>
        </div> 
    </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-8">
                <div class="col">
                <table class="table table-borderless table-responsive">
                    <thead>
                        <tr class="table-active">
                            <th scope="col" width="17%">Roll No</th>
                            <th scope="col" width="66%">Student Name</th>
                            <th scope="col" width="17%">Percentage</th>
                        </tr>
                    </thead>
                </table>
                </div>
            </div>
        </div>
   </div>
