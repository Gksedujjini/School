@model Edujinni.Models.Teacher.ExamSchedule
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Exam Schedule</title>
    <style>
        #colcontainer {
            background-color: #f2f2f2;
            width: 100%;
            border-radius: 10px;
        }
        .form-control{
            border-radius:20px;
        }
        #viewbtn {
            background-color: green;
            color: white;
            border-radius: 10px;
            min-width: 100px;
            max-width: 200px;
        }
    </style>
</head>
<body>
    <div class="row ml-0 mr-2 mt-5 justify-content-center" style="width:100%;">
        <div class="col-md-8 col-md-offset-0 mr-1 mb-3" id="colcontainer">
            <br />
            <center><b>Enter Exam Schedule</b></center>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Class</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Section" class="form-control">
                            <option>Section</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="SubjectName" class="form-control">
                            <option>Subject Name</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="SubjectType" class="form-control">
                            <option>Subject Type</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                            @Html.TextBoxFor(Model => Model.Marks, new { @class = "form-control", @placeholder = "Marks" })
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        @Html.TextBoxFor(Model => Model.Date, new { @class = "form-control", @placeholder = "Date" })
                        <span class="glyphicon glyphicon-calendar form-control-feedback mr-4" style="color:gray;"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Class" class="form-control">
                            <option>Select Unit</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <select name="Section" class="form-control">
                            <option>Select Sub Units</option>
                            <option>Section</option>
                            <option>Section</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 mt-2">
                    <div class="col">
                        @Html.TextAreaFor(Model => Model.Topics, new { @class ="form-control", @placeholder = "Enter Topics"})
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        Start Time (Timepicker)
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    <div class="col">
                        End Time (Timepicker)
                    </div>
                </div>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="col-md-6 mt-2">
                    <div class="col">
                        <input type="button" value="Save" id="viewbtn" class="form-control" />
                    </div>
                </div>
            </div>
            <br /><br />
        </div>
    </div>
</body>
</html>
