@model Edujinni.Models.Editprofile
@{
    //Layout = null;
}
@using (Html.BeginForm("Addteacher", "Home", FormMethod.Post))
{
    <!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <script src="https://code.jquery.com/jquery-3.3.1.js"
                integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
                crossorigin="anonymous"></script>
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
        <link href="Content/all.min.css" rel="stylesheet" type="text/css">
        <link href="Content/sb-admin.css" rel="stylesheet">
        <title>Edit Profile</title>
        <script>
            $(document).ready(function () {
                    $('#upload-data').click(function () {
                        $('#getfile').trigger('click');
                        return false;
                    });

                    $('#upload-data1').click(function () {
                        $('#getfile1').trigger('click');
                        return false;
                    });
                    $('#upload-data').mouseover(function () {
                        $('#upload-data').css('color', 'blue');
                    });
                    $('#upload-data').mouseout(function () {
                        $('#upload-data').css('color', 'black');
                    });
                    $('#upload-data1').mouseover(function () {
                        $('#upload-data1').css('color', 'blue');
                    });
                    $('#upload-data1').mouseout(function () {
                        $('#upload-data1').css('color', 'black');
                    });
                });
        </script>
        <style>
            .form-control{
            border-radius:20px;
            background-color: #ebebe0;
            }
            .file-upload {
               display: none;
            }
            .upload-button {
             font-size: 1.6em;
            }
            #upload-data {
             font-size: 1.6em;
            }
            #upload-data1 {
             font-size: 1.6em;
            }
            #basic-url{
                background-color:blue;
                color:white;
                border-radius:00px 20px 20px 00px;
            }
            #basic-addon3{
                background-color: #d7d7c1; width: 115px;border-radius: 20px 00px 00px 20px;
            }
        </style>
    </head>
<body>
    <div class="row ml-2"> 
        <div class="col-md-9 mb-3" style="background-color: white;">
            <form action="#">
                <div class="row mt-3">
                    <div class="ml-3 mt-2 mr-3" id="image" style="background-color: #ebebe0; text-align: right; width: 255px; height: 100px; border-radius: 10px;">
                        <center>
                            <div style="width: 80px; margin-top: 15px; color: red;">
                                <label>School</label><br>
                                <label style="font-size: 20px;">Logo</label>
                            </div>
                        </center>
                        <i class="fa fa-plus-circle upload-data" id="upload-data" style="margin-right: -20px; color:black; margin-top: -10px;"></i>
                        <input class="getfile" id="getfile" style="display: none;" type="file" accept="image/*" />
                    </div>
                    <div class="mt-2" id="image" style="margin-left: 33px;background-color: #ebebe0; width: 130px; height: 100px; text-align: right; border-radius: 10px;">
                        <center><i class="fa fa-user fa-5x" style="color:blue;"></i></center>
                        <i class="fa fa-plus-circle upload-data" id="upload-data1" style="margin-right: -20px; color: black; margin-top: -5px;"></i>
                        <input class="" id="getfile1" style="display: none;" type="file" accept="image/*" />
                    </div>
                    <div class="col ml-4">
                        <div class="row mt-2">
                            <div class="col input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">Principal ID</span>
                                </div>
                                @*@Html.TextBoxFor(Model => Model.PrincipalId, new { @class = "form-control", value = "12436576", @id = "basic-url"})*@
                                <input type="text" name="" value="12436576" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                            </div>
                        </div> <div class="row mt-4">
                            <div class="col input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">School Name</span>
                                </div>
                                <input type="text" name="" value="Kakathiya School" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                            </div>
                        </div>
                        <!--  <div class="row mt-4">
                       <div class="col">
                         <input type="" name="" class="form-control">
                       </div>
                     </div> -->
 
                    </div>
                </div>
                <div class="form-row mt-5">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.PhoneNo, new { @class = "form-control", @placeholder = "Phone NO" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                        <div class="form-check form-check-inline ml-auto">
                            @Html.RadioButtonFor(Model => Model.Gender, "Male", new { @class = "form-check-input", @id = "inlineCheckboxMale" })
                            <label class="form-check-label" for="inlineCheckboxMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline ml-3">
                            @Html.RadioButtonFor(Model => Model.Gender, "Female", new { @class = "form-check-input", @id = "inlineCheckboxFemale" })
                            <label class="form-check-label" for="inlineCheckboxFemale">Female</label>
                        </div>
                    </div>
                </div>

                <div class="form-row mt-4">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.FlatNO, new { @class = "form-control", @placeholder = "Flat NO" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.Street, new { @class = "form-control", @placeholder = "Street 1" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                        @*@Html.TextBoxFor(Model => Model.SchoolPhoneNo, new { @class = "form-control", @placeholder = "School Phone No" })*@
                    </div>

                </div>
                <div class="form-row mt-4">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.AreaCityState, new { @class = "form-control", @placeholder = "Area, City, State" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.PinCode, new { @class = "form-control", @placeholder = "Pincode" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                        @*@html.textboxfor(model => model.schoolphoneno, new { @class = "form-control", @placeholder = "school phone no" })*@
                    </div>

                </div>
                <div class="row mt-5 ml-2"><label><b>School Address</b></label></div>
                <div class="form-row">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.SchoolAddrFlatNO, new { @class = "form-control", @placeholder = "Flat NO" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.Street, new { @class = "form-control", @placeholder = "Street 1" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.SchoolPhoneNo, new { @class = "form-control", @placeholder = "School Phone No" })
                    </div>
                </div>
                <div class="form-row mt-4">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.SchoolAddrAreaCity, new { @class = "form-control", @placeholder = "Area, City" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.SchoolAddrState, new { @class = "form-control", @placeholder = "State" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.SchoolAddrePinCode, new { @class = "form-control", @placeholder = "Pincode" })
                    </div>
                </div>

                <div class="row mt-5 ml-2"><label><b>Change Password</b></label></div>
                <div class="form-row">
                    <div class="col-md-4 mt-2">
                        @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Type Password" })
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        @Html.TextBoxFor(Model => Model.ConfirmPassword, new { @class = "form-control", @placeholder = "Retype Password" })
                    </div>
                    <div class="col-md-3 ml-auto mt-2">
                    </div>
                </div>
                <div class="form-row mt-4">
                    <div class="col-md-4 mt-2"">
                    </div>
                    <div class="col-md-4 ml-auto mt-2">
                        <input type="button" class="form-control" Value="Edit" style="border-radius:20px; background-color: black; color:white;">
                    </div>
                    <div class="col-md-3 ml-auto mt-2 mb-1">
                        <input type="button" class="form-control" value="Save" style="border-radius:20px; background-color: #01BE66; color:white;">
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
}