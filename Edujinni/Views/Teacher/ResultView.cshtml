@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" rel="text/javascript" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" rel="text/javascript" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Result View</title>
    <style>
        .form-control {
            border-radius: 20px;
            background-color: white;
        }

        #cntnr {
            background-color: #f2f2f2;
            border-radius: 5px;
            width: 70%;
        }
        #rank{font-size: 15px; color: black; margin-top: -5px;}
        #rankbox{background-color: white; width: 100px; height: 100px; border-radius: 8px}
        #rank-lablel{font-size:35px;color:green; margin-top:5px;}
        #labelstd{font-size:12px; color:gray;}
    </style>
</head>
<body>
    <div class="container mt-5" id="cntnr">
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-6 mt-2">
                    <div class="col">
                    <label id="labelstd">Student Name</label><br />
                    <input type="text" value="Sampath Kumar" />
                    </div>
                    
            </div>
            <div class="col-md-6 mt-2">
                <div class="col">
                    <label id="labelstd">Parent Name</label><br />
                    <input type="text" value="Prasant Kumar" />
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-md-6 mt-2">
                <div class="col">
                    <label id="labelstd">Student Id</label><br />
                    <input type="text" value="54545545" />
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <div class="col">
                    <label id="labelstd">Type of Exam</label><br />
                    <input type="text" value="Unit Text-3" />
                </div>
            </div>
        </div>
        <div class="row justify-content-start mt-3">
            <div class="col-md-4">
                <div class="col" style="width:80%;">
                   <div class="text-center" id="rankbox">
                       <p id="rank-lablel">5</p>
                       <p id="rank">Rank</p>
                   </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col" style="width:80%;">
                    <div class="text-center" id="rankbox">
                        <p id="rank-lablel">87</p>
                        <p id="rank">%</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col" style="width:80%;">
                    <div class="text-center" id="rankbox">
                        <p id="rank-lablel">A</p>
                        <p id="rank">Grade</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-12">
                <div class="col" style="width:100%;">
                    
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-12">
                <div class="col">
                    <table class="table table-borderless" style="width:83%">
                        <thead>
                            <tr class="" style="color:white; background-color:blue;">
                                <th scope="col" width="50%">Subject</th>
                                <th scope="col" width="50%">Marks Obtained</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="" style="color:black; background-color:#e6ffff;">
                                <td scope="col" width="50%">Social</td>
                                <td scope="col" width="50%"><span style="color:green">50</span>/50</td>
                            </tr>
                            <tr class="" style="color:black; background-color:#ffe6ff;">
                                <td scope="col" width="50%">English</td>
                                <td scope="col" width="50%"><span style="color:red">10</span>/50</td>
                            </tr>
                            <tr class="" style="color:white; background-color:green;">
                                <th scope="col" width="50%">Obtained</th>
                                <th scope="col" width="50%">180</th>
                            </tr>
                            <tr class="" style="color:white; background-color:red;">
                                <th scope="col" width="50%">Total</th>
                                <th scope="col" width="50%">600</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
